<main>
  <h2>Create a New Post</h2>
  <form action="/submit" method="POST">
    <input type="text" name="title" placeholder="Title" required />
    <textarea
      name="blog-content"
      placeholder="Write your post here..."
      required
    ></textarea>
    <button type="submit">Post</button>
  </form>
</main>

